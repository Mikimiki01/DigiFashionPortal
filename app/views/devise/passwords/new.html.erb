<div class="row">
  <div class="col-lg-4 col-9 mx-auto mt-5 mb-5">
    <h2>Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, id: "password-reset-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "email-field" %>
      </div>

      <div class="field">
        <%= f.submit "Send me reset password instructions", class: "btn btn-primary col-12", id: "reset-password-button", style: "background-color: #CCCCCC; border: transparent; margin: 10px auto;" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

  <script>
    document.getElementById('password-reset-form').addEventListener('submit', function(event) {
      var emailField = document.getElementById('email-field');
      
      // メールアドレスが空の場合は送信をキャンセル
      if (!emailField.value) {
        event.preventDefault();
        alert('Please enter your email address.');
      }
    });
  </script>
</div>
